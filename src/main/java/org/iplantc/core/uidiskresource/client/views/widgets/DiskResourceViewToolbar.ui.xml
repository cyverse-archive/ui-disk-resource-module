<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form">

   <ui:with field="res"
            type="org.iplantc.core.resources.client.IplantResources"/>
   <ui:with field="display"
            type="org.iplantc.core.resources.client.messages.IplantDisplayStrings"/>

   <toolbar:ToolBar>
         <!-- Upload Menu -->
      <toolbar:child>
         <button:TextButton debugId="idfileUploadBtn" ui:field="uploads"
                            text="{display.upload}"
                            icon="{res.importData}">
            <button:menu>
               <menu:Menu>
                  <menu:MenuItem debugId="idBlkUplodBtn" ui:field="bulkUploadButton"
                                 text="{display.bulkUploadFromDesktop}">
                  </menu:MenuItem>
                  <menu:MenuItem debugId="idSimpleUpldBtn" ui:field="simpleUploadButton"
                                 text="{display.simpleUploadFromDesktop}">
                  </menu:MenuItem>
                  <menu:MenuItem debugId="idUrlImportBtn" ui:field="importButton"
                                 text="{display.importLabel}">
                  </menu:MenuItem>
               </menu:Menu>
            </button:menu>
         </button:TextButton>
      </toolbar:child>

      <!-- New Folder button -->
      <toolbar:child>
         <button:TextButton debugId="idNewFolderBtn" ui:field="newFolderButton"
                            text="{display.newFolder}"
                            icon="{res.folderAdd}">
         </button:TextButton>
      </toolbar:child>

      <!-- Refresh button -->
      <toolbar:child>
         <button:TextButton debugId="idRefresnBtn" ui:field="refreshButton"
                            text="{display.refresh}"
                            icon="{res.refresh}">
         </button:TextButton>
      </toolbar:child>

      <!-- Download menu -->
      <toolbar:child>
         <button:TextButton debugId="idDownloadBtn" ui:field="downloads"
                            text="{display.download}"
                            icon="{res.download}">
            <button:menu>
               <menu:Menu>
                  <menu:MenuItem debugId="idSimpleDownloadBtn" ui:field="simpleDownloadButton"
                                 text="{display.simpleDownload}">
                  </menu:MenuItem>
                  <menu:MenuItem debugId="idBulkDownloadBtn" ui:field="bulkDownloadButton"
                                 text="{display.bulkDownload}">
                  </menu:MenuItem>
               </menu:Menu>
            </button:menu>
         </button:TextButton>
      </toolbar:child>

      <!-- Rename button -->
      <toolbar:child>
         <button:TextButton debugId="idRenameBtn" ui:field="renameButton"
                            text="{display.rename}"
                            icon="{res.fileRename}">
         </button:TextButton>
      </toolbar:child>

      <!-- Delete button -->
      <toolbar:child>
         <button:TextButton debugId="idDeleteBtn" ui:field="deleteButton"
                            text="{display.delete}"
                            icon="{res.fileDelete}">
         </button:TextButton>
      </toolbar:child>

      <!-- Share button -->
      <toolbar:child>
         <button:TextButton debugId="idShareBtn" ui:field="shareButton"
                            text="{display.share}"
                            icon="{res.share}">
                                             
            <button:menu>
               <menu:Menu>
                  <menu:MenuItem debugId="idLinkShare" ui:field="dataLink"
                                 text="Send a link">
                  </menu:MenuItem>
                  <menu:MenuItem debugId="idUserShare" ui:field="share"
                                 text="Via Discovery Environment">
                  </menu:MenuItem>
               </menu:Menu>
            </button:menu>
         </button:TextButton>
      </toolbar:child>

       <toolbar:child>
         <button:TextButton debugId="idTrashBtn" ui:field="trash"
                            icon="{res.deleteIcon}"
                            text="Trash">
            <button:menu>
               <menu:Menu>
                  <menu:MenuItem debugId="idEmptyTrashBtn" ui:field="emptyTrash"
                                 text="{display.emptyTrash}">
                  </menu:MenuItem>
                  <menu:MenuItem debugId="idRestoreBtn" ui:field="restore"
                                 text="{display.restore}">
                  </menu:MenuItem>
               </menu:Menu>
            </button:menu>
         </button:TextButton>
      </toolbar:child>

      <!-- Data Search box -->
      <toolbar:child>
      	<form:TextField debugId="idSearchTxt" ui:field="searchField" emptyText="search by name"> </form:TextField>
      </toolbar:child>


   </toolbar:ToolBar>
</ui:UiBinder>