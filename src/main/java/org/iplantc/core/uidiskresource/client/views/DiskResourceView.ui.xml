<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:tree="urn:import:com.sencha.gxt.widget.core.client.tree"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:toolbar="urn:import:org.iplantc.core.uidiskresource.client.views.widgets">
   <ui:with type="org.iplantc.core.uidiskresource.client.DiskResourceDisplayStrings" field="DISPLAY" />


    <!-- Nav Panel -->
   <ui:with field="treeStore"
            type="com.sencha.gxt.data.shared.TreeStore" />
         
    <!-- Main Panel -->
   <ui:with field="listStore"
            type="com.sencha.gxt.data.shared.ListStore" />
   <ui:with field="cm"
            type="com.sencha.gxt.widget.core.client.grid.ColumnModel" />
   <ui:with field="gridView"
            type="com.sencha.gxt.widget.core.client.grid.GridView">
      <ui:attributes forceFit="true" 
                     autoFill="true"/>
   </ui:with>
   
   <!-- Border Layout Data -->
   <ui:with field="westMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="centerMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="northData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="30"
                     maxSize="30"/>
   </ui:with>
   <ui:with field="westData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{westMargins}"
                     size="175"
                     collapsible="true"
                     split="true" />
   </ui:with>
   <ui:with field="centerData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{centerMargins}" 
                     size="1"
                     hidden="false"/>
   </ui:with>
   <ui:with field="eastData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="175"
                     hidden="false"/>
   </ui:with>
   <ui:with field="southData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="30"
                     hidden="true"/>
   </ui:with>
   
   <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins0050">
    <ui:attributes top="0" right="0" bottom="0" left="0" />
  </ui:with>
   
 <ui:with type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData" field="boxLayoutDataMargins0050Flex1">
    <ui:attributes margins="{margins0050}" flex="1" />
  </ui:with>
   
   <container:SimpleContainer>
      <container:BorderLayoutContainer ui:field="con"
                                       borders="true">
             <!-- This is the tool bar -->
         <container:north layoutData="{northData}">
            <toolbar:DiskResourceViewToolbar ui:field="toolbar"/>
         </container:north>
             <!-- This is the navigation panel -->
         <container:west layoutData="{westData}">
            <gxt:ContentPanel ui:field="westPanel"
                              headerVisible="false"
                              bodyBorder="false">
               <tree:Tree ui:field="tree"
                          autoSelect="true"/>
            </gxt:ContentPanel>
         </container:west>
          <!-- This is the main panel -->
         <container:center layoutData="{centerData}">
            <gxt:ContentPanel ui:field="centerPanel"
                              headerVisible="false"
                              resize="true" 
                              bodyBorder="false">
                     <grid:Grid ui:field="grid"
                                cm="{cm}"
                                store="{listStore}"
                                view="{gridView}" />
            </gxt:ContentPanel>
         </container:center>
         <!-- This is the details panel -->
         <container:east layoutData="{eastData}">
           <container:VBoxLayoutContainer vBoxLayoutAlign="STRETCH">
            <gxt:ContentPanel ui:field="detailsPanel" 
                              headingText="{DISPLAY.details}"  layoutData="{boxLayoutDataMargins0050Flex1}" />
             <gxt:ContentPanel ui:field="historyPanel" 
                              headingText="Search History" layoutData="{boxLayoutDataMargins0050Flex1}"/>
               </container:VBoxLayoutContainer>
         </container:east>
         <container:south layoutData="{southData}"/>
      </container:BorderLayoutContainer>
   </container:SimpleContainer>
</ui:UiBinder> 